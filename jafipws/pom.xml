<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>ar.com.integrarsoluciones.jafipws</groupId>
  <artifactId>jafipws</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>jafipws</name>
  <url>http://www.integrarsoluciones.com.ar</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <log4j.version>1.2.17</log4j.version>
    <spring.version>5.3.18</spring.version>
    <bouncycastle.version>1.54</bouncycastle.version>
  </properties>
  
	<build>  
		<resources>  
	          <resource>  
	               <directory>src/main/resources</directory>  
	               <filtering>true</filtering>  
	          </resource>  
	     </resources>  
	     <plugins>
	        <!-- tag::wsdl[] -->
	        <!-- Generate stub code for AFIP web service using Spring WS -->
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <version>0.12.3</version>
                <executions>
                    <execution>
                    	<id>wsaa</id>
                    	<phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
		                    <schemaLanguage>WSDL</schemaLanguage>
		                    <generatePackage>wsaa.wsdl</generatePackage>
		                    <schemas>
		                        <schema>
		                            <url>https://wsaahomo.afip.gov.ar/ws/services/LoginCms?wsdl</url>
		                        </schema>
		                    </schemas>
		                </configuration>
                    </execution>
                    <execution>
                    	<id>wsfe</id>
                    	<phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
		                    <schemaLanguage>WSDL</schemaLanguage>
		                    <generatePackage>wsfe.wsdl</generatePackage>
		                    <schemas>
		                        <schema>
		                            <url>https://wswhomo.afip.gov.ar/wsfev1/service.asmx?wsdl</url>
		                        </schema>
		                    </schemas>
		                </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- end::wsdl[] -->
		    <plugin>
		        <!-- Generate JavaDocs -->
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-javadoc-plugin</artifactId>
		        <version>2.10.4</version>
		        <configuration>
		        </configuration>
		    </plugin>
	        <plugin>
			    <!-- Build an executable JAR -->
			    <groupId>org.apache.maven.plugins</groupId>
			    <artifactId>maven-jar-plugin</artifactId>
			    <version>3.0.1</version>
			    <configuration>
			      <archive>
			        <index>true</index>
			        <manifest>
			          <addClasspath>true</addClasspath>
			          <classpathPrefix>lib/</classpathPrefix>
			          <mainClass>ar.com.integrarsoluciones.jafipws.App</mainClass>
			        </manifest>
			      </archive>
			    </configuration>
			</plugin>  
	     </plugins>  
	</build> 

	<dependencies>
		<!-- SOAP web service client lib -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
            <groupId>org.springframework.ws</groupId>
            <artifactId>spring-ws-core</artifactId>
            <version>2.3.0.RELEASE</version>
        </dependency>
        
        <!-- Base64 codec -->
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<version>1.10</version>
		</dependency>
		<!-- CMS and signature stuff -->
		<dependency>
			<groupId>org.bouncycastle</groupId>
			<artifactId>bcprov-jdk15on</artifactId>
			<version>${bouncycastle.version}</version>
		</dependency>
		<dependency>
			<groupId>org.bouncycastle</groupId>
			<artifactId>bcmail-jdk15on</artifactId>
			<version>${bouncycastle.version}</version>
		</dependency>
		<dependency>
			<groupId>javax.xml</groupId>
			<artifactId>jaxrpc-api</artifactId>
			<version>1.1</version>
		</dependency>
		<!-- Local Object persistence -->
		<dependency>
			<groupId>org.mapdb</groupId>
			<artifactId>mapdb</artifactId>
			<version>1.0.9</version>
		</dependency>
		<!-- XML object serialization -->
		<dependency>
			<groupId>dom4j</groupId>
			<artifactId>dom4j</artifactId>
			<version>1.6.1</version>
		</dependency>
		<dependency>
			<groupId>jaxen</groupId>
			<artifactId>jaxen</artifactId>
			<version>1.1.6</version>
		</dependency>
		<!-- Logging and testing support -->
		<dependency>  
		    <groupId>log4j</groupId>  
		    <artifactId>log4j</artifactId>  
		    <version>${log4j.version}</version>  
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
